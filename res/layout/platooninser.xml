<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.bailv.smartdormitory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcd9d9" >

    <include
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:orientation="horizontal"
        android:weightSum="9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@drawable/air_background_shadow"
            android:orientation="vertical"
            android:weightSum="9" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="3" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/platooninsert_two_image_1"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/switch_unbackground"
                        android:scaleType="centerInside"
                        android:src="@drawable/chazuo_san_un" />

                    <com.bailv.util.CheckSwitchButton
                        android:id="@+id/platooninsert_two_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/platooninsert_two_tag_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="@string/platooninser_switch_tag_unset"
                        android:textColor="@color/platooninser_switch_tag_unset"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="3" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/platooninsert_two_image_2"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/switch_unbackground"
                        android:scaleType="centerInside"
                        android:src="@drawable/chazuo_san_un" />

                    <com.bailv.util.CheckSwitchButton
                        android:id="@+id/platooninsert_two_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/platooninsert_two_tag_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="@string/platooninser_switch_tag_unset"
                        android:textColor="@color/platooninser_switch_tag_unset"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="3" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/platooninsert_two_image_3"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/switch_unbackground"
                        android:scaleType="centerInside"
                        android:src="@drawable/chazuo_san_un" />

                    <com.bailv.util.CheckSwitchButton
                        android:id="@+id/platooninsert_two_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/platooninsert_two_tag_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="@string/platooninser_switch_tag_unset"
                        android:textColor="@color/platooninser_switch_tag_unset"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@drawable/air_background_shadow"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="宿舍灯光"
                android:textColor="#8093b0"
                android:textSize="40sp" />

            <ImageView 
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/light_off"/>
            
            <com.bailv.util.CircleButton
                android:id="@+id/light_power"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/power"
                app:cb_color="#FF4444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@drawable/air_background_shadow"
            android:gravity="center" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>